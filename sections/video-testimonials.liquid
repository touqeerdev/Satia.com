{% schema %}
{
  "name": "Video Testimonials Slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "See what customers are saying"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Trustpilot 4.8 star average"
    },
    {
      "type": "range",
      "id": "average_rating",
      "label": "Average Rating",
      "min": 1,
      "max": 5,
      "default": 4
    },
    {
      "type": "text",
      "id": "product_name",
      "label": "Product Name",
      "default": "Product Name"
    },
    {
      "type": "text",
      "id": "author_name",
      "label": "Author Name",
      "default": "Author Name"
    },
    {
      "type": "textarea",
      "id": "review_body",
      "label": "Review Body",
      "default": "This product is great!"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial Slide",
      "settings": [
        {
          "type": "text",
          "id": "testimonial_title",
          "label": "Testimonial Title",
          "default": "I feel so good"
        },
        {
          "type": "textarea",
          "id": "testimonial_text",
          "label": "Testimonial Text",
          "default": "Lorem ipsum dolor sit amet."
        },
        {
          "type": "url",
          "id": "video_url",
          "label": "Video URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video Testimonials Slider",
      "category": "Testimonials"
    }
  ]
}
{% endschema %}

