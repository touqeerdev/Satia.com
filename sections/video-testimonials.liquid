<section class="testimonial-slider">
  <div class="testimonial-header">
    <h2>{{ section.settings.heading }}</h2>
    <div class="star-rating">
      {% for i in (1..5) %}
        {% if i <= section.settings.average_rating %}
          ★
        {% else %}
          ☆
        {% endif %}
      {% endfor %}
    </div>
    <p class="testip21">{{ section.settings.subheading }}</p>
  </div>

  <div class="testimonial-slides">
    {% for block in section.blocks %}
      <div class="testimonial-slide">
        <video controls>
          <source src="{{ block.settings.video_url }}" type="video/mp4">
        </video>
        <h3 class="testi-title">{{ block.settings.testimonial_title }}</h3>
        <p class="testip" >{{ block.settings.testimonial_text }}</p>
      </div>
    {% endfor %}
  </div>
</section>

<!-- Schema.org JSON-LD for Testimonials -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Review",
  "itemReviewed": {
    "@type": "Product",
    "name": "{{ section.settings.product_name }}"
  },
  "author": {
    "@type": "Person",
    "name": "{{ section.settings.author_name }}"
  },
  "reviewRating": {
    "@type": "Rating",
    "ratingValue": "{{ section.settings.average_rating }}",
    "bestRating": "5"
  },
  "reviewBody": "{{ section.settings.review_body }}",
  "video": {
    "@type": "VideoObject",
    "name": "{{ block.settings.testimonial_title }}",
    "contentUrl": "{{ block.settings.video_url }}",
    "description": "{{ block.settings.testimonial_text }}"
  }
}
</script>

